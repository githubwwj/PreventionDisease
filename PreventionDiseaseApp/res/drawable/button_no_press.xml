<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
          <gradient android:startColor="#00000000" android:endColor="#33000000" android:centerColor="#11000000" />
        </shape></item>
    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:startColor="#00000000" android:endColor="#33000000" android:centerColor="#11000000" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">

            <!-- 鼠标放在上面时的颜色 -->
           <gradient android:startColor="#00000000" android:endColor="#33000000" android:centerColor="#11000000" />
        </shape></item>
    <!-- 当前颜色，即默认背景色 -->
    <item><shape android:shape="rectangle">
            <stroke android:dashWidth="5.0dip" android:width="0.2dip" android:color="@color/dark_green" />

            <solid android:color="@color/green" />
        </shape></item>

</selector> <!-- 定义按钮的样式文件   现没有使用 -->
