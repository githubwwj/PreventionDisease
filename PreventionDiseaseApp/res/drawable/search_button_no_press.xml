<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <corners android:radius="1.0dip" />

            <!-- 按下按钮时的颜色 -->
            <solid android:color="@color/dark_green" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">

            <!-- 鼠标放在上面时的颜色 -->
            <solid android:color="@color/dark_green" />
        </shape></item>
    <!-- 当前颜色，即默认背景色 -->
    <item android:drawable="@drawable/ic_action_search"><shape android:shape="rectangle"><stroke android:width="1dip" android:dashWidth="5.0dip"
        android:color="@color/dark_green"/>
            <solid android:color="@color/green" />
        </shape></item>

</selector> <!-- 定义按钮的样式文件   现没有使用 -->
